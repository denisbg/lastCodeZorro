{% extends "emails/base.html.twig" %}

{% block title %}
  {{ parent() }}
{% endblock %}

{% block header %}
  {{ parent() }}
{% endblock %}

{% block content %}
  <tr>
    <td class="" style="vertical-align:top;width:588px;">
      <table border="0" cellpadding="0" cellspacing="0" role="presentation" width="100%">
        <tbody>
          <tr>
            <td style="vertical-align:top;padding:50px 23px 30px;">
              <table border="0" cellpadding="0" cellspacing="0" role="presentation" style width="100%">
                <tbody>

                  <tr>
                    <td align="left" style="font-size:0px;padding:0 0 20px;word-break:break-word;">
                      <div style="font-family:Montserrat;font-size:14px;font-weight:500;line-height:18px;text-align:left;color:#000000;">
                        Bonjour            
                        {{command.benefit.user.firstName}}
                        {{command.benefit.user.lastName}},         
                      </div>
                    </td>
                  </tr>
                  <tr>
                    <td align="left" style="font-size:0px;padding:0 0 20px;word-break:break-word;">
                      <div style="font-family:Montserrat;font-size:14px;font-weight:500;line-height:18px;text-align:left;color:#000000;">
                        Le devis N° {{command.id}} pour la prestation {{command.benefit.service.name}} a été refusé..
                      </div>
                    </td>
                  </tr>
                  <tr>
                    <td align="left" style="font-size:0px;padding:0 0 20px;word-break:break-word;">
                      <div style="font-family:Montserrat;font-size:14px;font-weight:500;line-height:18px;text-align:left;color:#000000;">
                        <strong style="font-weight: 600;">
                          Raison :
                        </strong>
                        {{command.rejectRaison}}
                      </div>
                    </td>
                  </tr>
                  <tr>
                    <td align="left" style="font-size:0px;padding:0 0 20px;word-break:break-word;">
                      <div style="font-family:Montserrat;font-size:14px;font-weight:500;line-height:18px;text-align:left;color:#000000;">
                        <strong style="font-weight: 600;">
                          Nom du client :
                        </strong>
                        {{command.client.firstName}} {{command.client.lastName}}
                      </div>
                    </td>
                  </tr>
                  <tr>
                    <td align="left" style="font-size:0px;padding:0 0 20px;word-break:break-word;">
                      <div style="font-family:Montserrat;font-size:14px;font-weight:500;line-height:18px;text-align:left;color:#000000;">
                        <strong style="font-weight: 600;">
                          Informations complémentaires :
                        </strong>
                      </div>
                    </td>
                  </tr>
                  <tr>
                    <td align="left" style="font-size:0px;padding:0 0 20px;word-break:break-word;">
                      <div style="font-family:Montserrat;font-size:14px;font-weight:500;line-height:18px;text-align:left;color:#000000;">
                        <strong style="font-weight: 600;">
                          Demande d’un nouveau devis :
                        </strong>
                        {% if command.newDevis %}
                          Oui
                        {% else %}
                          Non
                        {% endif %}
                      </div>
                    </td>
                  </tr>
                  <tr>
                    <td align="left" style="font-size:0px;padding:0 0 20px;word-break:break-word;">
                      <div style="font-family:Montserrat;font-size:14px;font-weight:500;line-height:18px;text-align:left;color:#000000;">
                        Vous pouvez consulter le devis dans votre espace.
                      </div>
                    </td>
                  </tr>
                  <tr>
                    <td align="left" style="font-size:0px;padding:0px;word-break:break-word;">
                      <div style="font-family:Montserrat;font-size:14px;font-weight:500;line-height:18px;text-align:left;color:#000000;">
                        Pour cela, 
                        <a class="link-default" href="{{ urlDevis }}" target="_blank" style="color: #9ACA3C; line-height: 18px; transition: .5s all;">
                          cliquez ici
                        </a>.
                      </div>
                    </td>
                  </tr>

                </tbody>
              </table>
            </td>
          </tr>
        </tbody>
      </table>
    </td>
  </tr>
{% endblock %}

{% block footer %}
  {{ parent() }}
{% endblock %}